/* miniprogram/pages/qncloud/index.wxss */

.image-info-view{
    position: fixed;
    color: #fff;
    bottom: 0;
    left: 0;
    width: 100%;
}
.image-info-close{
    position: fixed;
    color: #fff;
    bottom: 20rpx;
    right: 20rpx;
    width: 100rpx;
    height: 100rpx;
    background-color: rgba(0,100,200,0.7);
    border-radius: 100%;
    line-height: 100rpx;
    text-align: center;
    font-size: 100rpx;
    overflow: hidden;
}
.image-info{
    width: 100%;
    padding: 100rpx 40rpx;
    word-break:break-all;
    background-color: rgba(0,100,200,0.7);
}
.tip{
    position: fixed;
    bottom: 150rpx;
    left:150rpx;
    right:150rpx;
    background-color: rgba(250,99,99,0.7);
    border-radius: 20rpx;
    font-size: 24rpx;
    padding: 10rpx 0;
    text-align: center;
    color: #fefefe;
}